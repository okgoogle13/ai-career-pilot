rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own profile document.
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only read and write to their own generated documents.
    match /generated_documents/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Dossier cache is read-only for authenticated users.
    match /dossier_cache/{companyName} {
      allow get: if request.auth != null;
      allow list, create, update, delete: if request.auth != null && request.auth.token.serviceAccount == true;
    }

    // Allow read-only access to public configuration data.
    match /config/{docId} {
      allow get: if true;
      allow list, create, update, delete: if false;
    }
  }
}
